<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.tm.exammobile.activities.ClientActivity">

    <LinearLayout
        android:id="@+id/header_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <Button
            android:id="@+id/buy_car_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Buy car"
            android:textAllCaps="false" />

        <Button
            android:id="@+id/my_cars_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="My cars"
            android:textAllCaps="false" />

        <Button
            android:id="@+id/retry_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Retry"
            android:textAllCaps="false"
            android:enabled="false"/>

    </LinearLayout>
    <ListView
        android:id="@+id/cars_list_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/header_list"/>

</RelativeLayout>
